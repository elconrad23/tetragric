@page
@model TetragricUI.Pages.InsuranceModel
@{
    ViewData["Title"] = "Insurance Claim Sign up";
}
<h2>Weather Index Insurance</h2>
<p>Submit your farm location to simulate payout triggers using real-time weather data.</p>

<form method="post">
    <label for="farmLocation">Farm Location:</label>
    <input type="text" name="farmLocation" id="farmLocation" required />
    <br/>
    <label for="farmLocation">Wallet id:</label>
    <br/>
    <input type="text" name="walletidname" id="walletidid" required />
    <br/>
    <button type="submit" class="btn btn-primary">Check Insurance Status</button>
</form>

<form method="post">
    <p>No smart wallet yet? </p>
    <a href="https://lace.io" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
      Signup for Lace Wallet
    </a>
</form>

<form method="post">
    <p>Prefer SMS text notifications?</p>
    <br/>
    <input type="text" name="userphonenumber" id="userphonenumberid" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@if (Model.StatusMessage != null)
{
    <div class="alert alert-info mt-3">@Model.StatusMessage</div>
}
