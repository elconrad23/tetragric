@page
@model TetragricUI.Pages.LoginModel
@{
    ViewData["Title"] = "Login - Tetragric";
}

<h2>Account Login</h2>

<form method="post" class="form-group">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control" type="email" required />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password" class="mt-3">Password</label>
    <input asp-for="Password" class="form-control" type="password" required />
    <span asp-validation-for="Password" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-4">Log In</button>
</form>

@if (Model.LoginFailed)
{
    <div class="alert alert-danger mt-3">
        Invalid email or password. Please try again.
    </div>
}

