@page
@model IndexModel
@{
    ViewData["Title"] = "Tetragric - Climate Insurance";
}

//Add media queries for responsive height and font scaling.
//Improve color contrast and text alignment for readability.
//Add aria-label for accessibility.
<style>
  .hero {
    background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
                url('/images/pexels-nicol-fernandez-2153608013-32807880.jpg') no-repeat center center;
    background-size: cover;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    color: #fff;
    text-align: center;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .hero p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    max-width: 600px;
  }

  .hero button, .hero a {
    margin: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: 1rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 80vh;
      padding: 1.5rem;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1rem;
    }
  }
</style>
<div class="hero" aria-label="Welcome section with image background of tea plantations in Uganda">
    <h1>Welcome to Tetragric</h1>
        <p>Secure your future with automated weather insurance and earn carbon emission credits.</p>
    <p><strong>Assess  Drought risk</strong></p>
    <form method="post">
        <button type="submit" class="btn btn-success">📩 Subscribe for Emission Tracking Reviews</button>
    </form>
    <hr />
    <a asp-page="Insurance" class="btn btn-outline-secondary">📚 Insurance Service Packages</a>
    <a asp-page="Forecast" class="btn btn-outline-info">🌦️ Predict Climate Weather (Next 3 Years)</a>
    <a asp-page="Emissions" class="btn btn-outline-dark">📄 Download your Emission Reports</a>
</div>
