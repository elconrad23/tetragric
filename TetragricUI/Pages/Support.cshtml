@page
@model SupportModel
@{
    ViewData["Title"] = "Support";
}
<style>
  .report-list {
    list-style: none;
    padding: 0;
    width: 65%;
    text-align: center;
    margin-top: 0.5rem;
  }

  .report-list li {
    margin-bottom: 0.5rem;
    background: linear-gradient(to right, #2b9348, #55a630);
    padding: 0.5rem 1rem;
    text-align: center;
    border-radius: 8px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.15);
  }

  .report-list li:hover {
    transform: scale(1.02);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.25);
  }

  .report-list a {
    color: white;
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
  }

  .report-list a::before {
    content: "ðŸ“¥";
    margin-right: 0.5rem;
    font-size: 1.1rem;
  }
</style>
<h2>Support Center</h2>
<p>If you have any questions or issues, please reach out:</p>
<ul class="report-list">
  <li>Email: <a href="mailto:support@tetragric.com">support@tetragric.com</a></li>
  <li>Phone: +256 761679678</li>
</ul>
<h3>Resources</h3>
    <ul class="report-list">
        <li class="nav-item"><a class="nav-link text-dark" href="/Resources">Resources</a></li>
    </ul>
<h3>Contact Form</h3>
<form method="post" asp-page-handler="Contact">
  <input type="text" name="name" placeholder="Your Name" required />
  <input type="email" name="email" placeholder="Your Email" required />
    <br/>
  <textarea name="message" placeholder="How can we help?" required></textarea>
  <button type="submit" name="submitcustomersupportfm" >Submit</button>
</form>
