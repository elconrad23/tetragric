@page
@model SupportModel
@{
    ViewData["Title"] = "Support";
}
<h2>Support Center</h2>
<p>If you have any questions or issues, please reach out:</p>
<ul>
  <li>Email: <a href="mailto:support@tetragric.com">support@tetragric.com</a></li>
  <li>Phone: +256 700 000000</li>
</ul>
<h3>Contact Form</h3>
<form method="post" asp-page-handler="Contact">
  <input type="text" name="name" placeholder="Your Name" required />
  <input type="email" name="email" placeholder="Your Email" required />
  <textarea name="message" placeholder="How can we help?" required></textarea>
  <button type="submit">Submit</button>
</form>
