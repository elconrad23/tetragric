<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tetragric</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/TetragricUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Tetragric B.I</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" href="/Forecast">Forecast</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="/Historical">Reports</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="/Support">Support</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Account">My Account</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="futuristic-footer border-top text-light mt-5">
    <div class="container py-4 d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div>
            <p class="mb-1">&copy; 2025 Tetragric. All rights reserved.</p>
            <p class="small">Built with blockchain for climate resilience and equity.</p>
        </div>

        <div class="d-flex gap-3 mb-3 mb-md-0">
            <a href="https://twitter.com" target="_blank" aria-label="Twitter">
                <img src="/images/twitter.svg" alt="Twitter" height="24">
            </a>
            <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
                <img src="/images/linkedin.svg" alt="LinkedIn" height="24">
            </a>
            <a href="https://github.com" target="_blank" aria-label="GitHub">
                <img src="/images/github.svg" alt="GitHub" height="24">
            </a>
        </div>

        <form method="post" asp-page="/Subscribe" asp-page-handler="Join" class="newsletter-form d-flex">
            <input type="email" name="email" class="form-control form-control-sm" placeholder="Your email" required />
            <button type="submit" class="btn btn-sm btn-outline-info ms-2">Join Newsletter</button>
        </form>
    </div>
</footer>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/recharts/umd/Recharts.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
